@page
@model mantenimiento.Pages.RegistroMantenimientoModel

<head>

    <link rel="stylesheet" href="~/css/form/style_form.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">

</head>
<body>

    <div class="d-flex flex-row justify-content-center">
        <div class="maintRegisterForm">
            <div class="wizard-form">
                <form class="form-register" id="form-register" action="https://localhost:44355/RegistroMantenimiento" method="post">
                    <input type="text" style="display: none;" id="line_element_id" name="line_element_id" value="@Model.line_element_id">
                    <div id="form-total">
                        <!-- SECTION 1 -->
                        <h2>
                            <p class="step-icon"><span>1</span></p>
                            <span class="step-text">Información general</span>
                        </h2>
                        <section>
                            <div class="inner">
                                <div class="form-heading">
                                    <h3>Registro de mantenimiento</h3>
                                    <span>1/3</span>
                                </div>
                                <div class="row">

                                    <div class="col-6">
                                        <div class="floating-label d-flex flex-column">
                                            <input class="floating-input" type="text" placeholder="" id="user_id" name="user_id">
                                            <span class="highlight"></span>
                                            <label class="labelInput">Usuario</label>
                                        </div>
                                    </div>

                                    <div class="col-6">
                                        <div class="floating-label d-flex flex-column  ms-1">
                                            <input class="floating-input" type="text" placeholder="" id="name" name="name">
                                            <span class="highlight"></span>
                                            <label class="labelInput">Titulo</label>
                                        </div>
                                    </div>

                                </div>

                                <div class="row">

                                    <div class="col-6">
                                        <div class="floating-label d-flex flex-column">
                                            <input class="floating-input" type="text" placeholder="" id="root_cause" name="root_cause">
                                            <span class="highlight"></span>
                                            <label class="labelInput">causa raiz</label>
                                        </div>
                                    </div>

                                    <div class="col-6">
                                        <div class="floating-label d-flex flex-column  ms-1">
                                            <input class="floating-input" type="text" placeholder="" id="sub_cause" name="sub_cause">
                                            <span class="highlight"></span>
                                            <label class="labelInput">sub causa</label>
                                        </div>
                                    </div>

                                </div>


                                <div class="row">
                                    <div class="col-12">
                                        <div class="dateLable mb-1">
                                            <p>Fecha</p>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-row form-row-date">
                                    <div class="form-holder form-holder-2 ms-2">

                                        <div class="row">
                                            <select name="date_day" id="date_day" class="form-control">
                                                <option value="01" selected>01</option>
                                                <option value="02">02</option>
                                                <option value="03">03</option>
                                                <option value="04">04</option>
                                                <option value="05">05</option>
                                                <option value="06">06</option>
                                                <option value="07">07</option>
                                                <option value="08">08</option>
                                                <option value="09">09</option>
                                                <option value="10">10</option>
                                                <option value="11">11</option>
                                                <option value="12">12</option>
                                                <option value="13">13</option>
                                                <option value="14">14</option>
                                                <option value="15">15</option>
                                                <option value="16">16</option>
                                                <option value="17">17</option>
                                                <option value="18">18</option>
                                                <option value="19">19</option>
                                                <option value="20">20</option>
                                                <option value="21">21</option>
                                                <option value="22">22</option>
                                                <option value="23">23</option>
                                                <option value="24">24</option>
                                                <option value="25">25</option>
                                                <option value="26">26</option>
                                                <option value="27">27</option>
                                                <option value="28">28</option>
                                                <option value="29">29</option>
                                                <option value="30">30</option>
                                                <option value="31">31</option>
                                            </select>

                                            <select name="date_month" id="date_month" class="form-control">
                                                <option value="01" selected>Ene</option>
                                                <option value="02">Feb</option>
                                                <option value="03">Mar</option>
                                                <option value="04">Apr</option>
                                                <option value="05">May</option>
                                                <option value="06">Jun</option>
                                                <option value="07">Jul</option>
                                                <option value="08">Ago</option>
                                                <option value="09">Sep</option>
                                                <option value="10">Oct</option>
                                                <option value="11">Nov</option>
                                                <option value="12">Dic</option>
                                            </select>

                                            <select name="date_year" id="date_year" class="form-control">
                                                <option value="2018" selected>2024</option>
                                                <option value="2017">2023</option>
                                                <option value="2017">2022</option>
                                                <option value="2016">2021</option>
                                                <option value="2015">2020</option>
                                                <option value="2014">2019</option>
                                                <option value="2013">2018</option>
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-12">
                                        <div class="floating-label d-flex flex-column">
                                            <input class="floating-input" type="text" placeholder="" id="desc" name="desc">
                                            <span class="highlight"></span>
                                            <label class="labelInput">Descripción</label>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col d-flex justify-content-center">
                                        <div>
                                            <input type="checkbox" id="success" name="success" checked />
                                            <span class="checkboxtext">Proposito cumplido</span>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </section>
                        <!-- SECTION 2 -->
                        <h2>
                            <p class="step-icon"><span>2</span></p>
                            <span class="step-text">Categoria </span>
                        </h2>
                        <section>
                            <div class="inner">
                                <div class="form-heading">
                                    <h3>En desarrollo ...</h3>
                                    <span>2/3</span>
                                </div>
                                <div class="form-images">
                                    <img src="/img/form/wizard_v6.jpg" alt="wizard_v6">
                                </div>
                                <div class="form-row">
                                    <div class="form-holder form-holder-2">
                                        <label for="maintenance_category_id" class="special-label-1">Categoria</label>
                                        <select name="maintenance_category_id" id="maintenance_category_id" class="form-control">
                                            <option class="opctionBlack" value="1" selected>categoria 1</option>
                                            <option class="opctionBlack" value="2">categoria 2</option>
                                            <option class="opctionBlack" value="3">categoria 3</option>
                                        </select>
                                        <span class="select-btn">
                                            <i class="zmdi zmdi-chevron-down"></i>
                                        </span>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-holder">
                                        <label for="day" class="special-label-1">en desarrollo ... </label>
                                        <input type="text" name="day" class="day" id="day" placeholder="15 / 08 / 2018">
                                    </div>
                                    <div class="form-holder">
                                        <label for="time" class="special-label-1">en desarrollo ...</label>
                                        <select name="time" id="time" class="form-control">
                                            <option class="opctionBlack" value="8:00am - 10.00am" selected>8:00am - 10.00am</option>
                                            <option class="opctionBlack" value="9:00am - 21:00pm">9:00am - 21:00pm</option>
                                            <option class="opctionBlack" value="10:00am - 22:00pm">10:00am - 22:00pm</option>
                                            <option class="opctionBlack" value="12:00am - 24:00pm">12:00am - 24:00pm</option>
                                        </select>
                                        <span class="select-btn">
                                            <i class="zmdi zmdi-chevron-down"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </section>
                        <!-- SECTION 3 -->
                        <h2>
                            <p class="step-icon"><span>3</span></p>
                            <span class="step-text">Ticket</span>
                        </h2>
                        <section>
                            <div class="inner">
                                <div class="form-heading">
                                    <h3>Comfirm Details prueba ... </h3>
                                    <span>3/3</span>
                                </div>
                                <div class="table-responsive">
                                    <table class="table">
                                        <tbody>
                                            <tr class="space-row">
                                                <th>campo 1:</th>
                                                <td id="fullname-val"></td>
                                            </tr>
                                            <tr class="space-row">
                                                <th>campo 2:</th>
                                                <td id="room-val"></td>
                                            </tr>
                                            <tr class="space-row">
                                                <th>campo 3:</th>
                                                <td id="day-val"></td>
                                            </tr>
                                            <tr class="space-row">
                                                <th>campo 4:</th>
                                                <td id="time-val"></td>
                                            </tr>
                                            <tr class="space-row">
                                                <th>campo 5:</th>
                                                <td id="price-val">xxx</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </section>
                    </div>
                </form>
            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
            crossorigin="anonymous"></script>

    <script src="~/js/form/postData.js"></script>

    <script src="~/js/form/jquery-3.3.1.min.js"></script>
    <script src="~/js/form/jquery.steps.js"></script>
    <script src="~/js/form/jquery-ui.min.js"></script>
    <script src="~/js/form/jquery_form.js"></script>

    <script>

    </script>
</body>
